<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        style="@style/web_ll_height"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_web_back"
            style="@style/iv_web_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/ic_back_dark_center" />

        <TextView
            style="@style/tv_roameat_home_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

    <View
        style="@style/roameat_view"
        android:layout_width="match_parent"
        android:background="@color/gray"></View>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                style="@style/activity_roameathome_rl"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:orientation="horizontal">

                <com.lanou.dllo.myfoodpie.custom.Circle
                    android:id="@+id/cir_activity_rm_home"
                    style="@style/cir_activity_rm_home"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:isCircle="true" />

                <TextView
                    android:id="@+id/tv_activity_rm_home_name"
                    style="@style/tv_activity_rm_home_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_toRightOf="@id/cir_activity_rm_home" />

                <TextView
                    android:id="@+id/tv_activity_rm_home_time"
                    style="@style/tv_activity_rm_home_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/tv_activity_rm_home_name"
                    android:layout_below="@id/tv_activity_rm_home_name"
                    android:layout_toRightOf="@id/cir_activity_rm_home"
                    android:text="四个月前" />
            </RelativeLayout>


            <ImageView
                android:id="@+id/iv_roameathome_activity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY" />

        </LinearLayout>
    </ScrollView>

    <View
        style="@style/roameat_view"
        android:layout_width="match_parent"
        android:background="@color/gray"></View>

    <RelativeLayout
        android:id="@+id/ll_web_share"
        style="@style/web_ll_height"
        android:layout_width="match_parent"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_activity_rm_home_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawableLeft="@mipmap/ic_photo_agree"
            android:gravity="center"
            android:text="=dfsds" />

    </RelativeLayout>
</LinearLayout>