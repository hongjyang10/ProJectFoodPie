<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="15dp"
    android:background="@color/white">


    <ImageView
        android:id="@+id/iv_item_home_photo"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="fitXY" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="155dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_item_home_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_item_home_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_item_home_title"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textSize="12sp" />

        <View
            android:id="@+id/tv_item_home_view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/tv_item_home_text"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/gray" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_item_home_head"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@id/tv_item_home_view"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
           />

        <TextView
            android:id="@+id/tv_item_home_name"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@id/tv_item_home_view"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/iv_item_home_head"
            android:ellipsize="end"
            android:gravity="center"
            android:maxEms="4"
            android:maxLines="1"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_item_home_number"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_item_home_view"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:drawableLeft="@mipmap/ic_photo_agree"
            android:gravity="center"
            android:paddingBottom="2dp" />
    </RelativeLayout>
</RelativeLayout>