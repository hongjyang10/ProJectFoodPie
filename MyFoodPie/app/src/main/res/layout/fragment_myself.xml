<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        style="@style/height_hundredeighy"
        android:layout_width="match_parent"
        android:background="@mipmap/img_my_bg">

        <TextView
            android:id="@+id/tv_myself"
            style="@style/tv_padding_myself"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/fragmengt_myself"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/iv_myself_set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_myself"
            android:layout_alignParentRight="true"
            android:src="@mipmap/ic_my_setting" />

        <com.lanou.dllo.myfoodpie.custom.Circle
            android:id="@+id/iv_my_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@mipmap/ic_analyse_default"
            app:isCircle="true" />

        <TextView
            android:id="@+id/tv_myself_login"
            style="@style/my_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_my_head"
            android:layout_centerHorizontal="true"
            android:background="@drawable/shape_my_login"
            android:text="@string/my_login"
            android:textColor="@color/white" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <ListView
            android:id="@+id/lv_myself"
            style="@style/lv_myself"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></ListView>
    </LinearLayout>
</LinearLayout>